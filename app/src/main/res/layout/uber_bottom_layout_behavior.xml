<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_dark"
    app:layoutDescription="@xml/uber_bottom_layout_behavior_scene">

    <View
        android:id="@+id/actionBarBg"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@android:color/background_dark"
        android:visibility="invisible"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_back_arrow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/actionBarBg"
        app:layout_constraintStart_toStartOf="@+id/actionBarBg"
        app:layout_constraintTop_toTopOf="@+id/actionBarBg"
        tools:ignore="ContentDescription" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Booking"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textColor="@android:color/white"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/actionBarBg"
        app:layout_constraintEnd_toEndOf="@+id/actionBarBg"
        app:layout_constraintStart_toStartOf="@+id/actionBarBg"
        app:layout_constraintTop_toTopOf="@+id/actionBarBg" />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@android:color/white"
        app:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent" />


</androidx.constraintlayout.motion.widget.MotionLayout>